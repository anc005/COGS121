  function addComment(msg) {
    //Get the nextM value
    database.ref('postComment/' + postSelect + '/').once('value', snapshot1 => {
	  //Create mX, where X = valueOf(nextM)
	  	database.ref('postComment/' + postSelect + '/m' + snapshot1.val().nextM).set({
	      user: "Anon",
